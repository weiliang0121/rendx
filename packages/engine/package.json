{
  "name": "rendx-engine",
  "version": "0.2.0",
  "description": "2D scene graph engine with animation, events, and plugin system",
  "license": "MIT",
  "author": "wei.liang (https://github.com/weiliang0121)",
  "type": "module",
  "keywords": [
    "rendx",
    "2d",
    "canvas",
    "rendering",
    "visualization",
    "scene-graph"
  ],
  "homepage": "https://weiliang0121.github.io/rendx/",
  "repository": {
    "type": "git",
    "url": "https://github.com/weiliang0121/rendx.git",
    "directory": "packages/engine"
  },
  "main": "dist/main.cjs",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --config ../../vitest.config.ts",
    "test:watch": "vitest --config ../../vitest.config.ts",
    "test:coverage": "vitest run --coverage --config ../../vitest.config.ts"
  },
  "dependencies": {
    "rendx-bounding": "workspace:^",
    "rendx-canvas": "workspace:^",
    "rendx-ease": "workspace:^",
    "rendx-interpolate": "workspace:^",
    "rendx-path": "workspace:^",
    "rendx-shape": "workspace:^",
    "rendx-svg": "workspace:^",
    "rendx-core": "workspace:^",
    "eventemitter3": "^5.0.4",
    "gl-matrix": "^3.4.4"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
